toolsets = vs2013;

vs2013.solutionfile = ../VC12/DbCreation1.sln;

setting SQLITE_ROOT
{
    help = "Path to the SQLite installation";
    default = '$(SQLITE)';
}

program DbCreation1
{
    includedirs += $(SQLITE_ROOT);

    headers
    {
        $(SQLITE_ROOT)/sqlite3.h
    }

    sources
    {
        $(SQLITE_ROOT)/sqlite3.c
        ../../Source/main.c
    }
}